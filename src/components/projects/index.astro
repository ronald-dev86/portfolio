---
import { getCollection } from 'astro:content';
import CardProject from './card.jsx';
let projects:any = [];

await getCollection('items',({data}) => {
  data.items.map((item:any) => {
    projects.push(item)
  })
});

---

<section id="projects" class=" bg-gray-700">
  <div class="w-full h-auto p-4 text-center">
    <h2 class="text-3xl font-bold text-center pb-8 text-white">Proyectos Destacados</h2>
    <div class="flex lg:flex-row flex-col md:justify-around">
      <CardProject initialItems={projects}></CardProject>
    </div>
  </div>
</section>